@page
@model ImageSharingPlatform.Pages.ArtistPages.MySharedImages.EditModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 style="padding-top:25px">Edit Shared Image</h2>
        <hr />
        <div class="col-12 d-flex justify-content-center">
            <div class="card shadow border-0 my-5 col-8">
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <div class="border p-3">
                                <label asp-for="SharedImage.ImageName" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.ImageName" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.ImageName" class="text-danger"></span>
                                </div>

                                <label class="form-label">Upload image</label>
                                <div class="form-floating py-2 col-12">
                                    <input type="file" name="uploadImage" class="form-control text-black" style="background-color: #f8f9fa; border: 1px solid #ced4da; padding-top:16px;" />
                                </div>

                                <label asp-for="SharedImage.ImageCategoryId" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.ImageCategoryId" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.ImageCategoryId" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.Description" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.Description" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.Description" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.CreatedAt" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.CreatedAt" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.CreatedAt" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.ArtistId" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.ArtistId" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.ArtistId" class="text-danger"></span>
                                </div>

                                <div class="form-floating form-check">
                                    <input class="form-check-input" asp-for="SharedImage.IsPremium" /> @Html.DisplayNameFor(model => model.SharedImage.IsPremium)
                                </div>

                                <input type="hidden" asp-for="SharedImage.Id" />
                                <div class="row pt-2">
                                    <div class="col-6 col-md-2">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <a asp-page="./Index" class="btn btn-outline-primary border form-control">
                                            Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </main>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

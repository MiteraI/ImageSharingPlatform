@page
@model ImageSharingPlatform.Pages.ArtistPages.MySharedImages.EditModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="pt-5 text-center">Edit Shared Image</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="card shadow border-0 my-5 col-md-8">
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="SharedImage.ImageName" class="form-label">Image Name</label>
                            <input asp-for="SharedImage.ImageName" class="form-control" readonly />
                            <span asp-validation-for="SharedImage.ImageName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 visually-hidden">
                            <label for="uploadImage" class="form-label">Upload image</label>
                            <input type="file" id="uploadImage" name="uploadImage" class="form-control" />
                        </div>

                        <div class="mb-3 visually-hidden">
                            <label asp-for="SharedImage.ImageCategoryId" class="form-label">Image Category</label>
                            <input asp-for="SharedImage.ImageCategoryId" class="form-control" readonly />
                            <span asp-validation-for="SharedImage.ImageCategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SharedImage.Description" class="form-label">Description</label>
                            <textarea asp-for="SharedImage.Description" class="form-control" readonly></textarea>
                            <span asp-validation-for="SharedImage.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 visually-hidden">
                            <label asp-for="SharedImage.CreatedAt" class="form-label">Create At</label>
                            <input asp-for="SharedImage.CreatedAt" class="form-control" readonly />
                            <span asp-validation-for="SharedImage.CreatedAt" class="text-danger"></span>
                        </div>

                        <div class="mb-3 visually-hidden">
                            <label asp-for="SharedImage.ArtistId" class="form-label">Artist</label>
                            <input asp-for="SharedImage.ArtistId" class="form-control" readonly />
                            <span asp-validation-for="SharedImage.ArtistId" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="SharedImage.IsPremium" />
                            <label class="form-check-label" asp-for="SharedImage.IsPremium">Premium</label>
                        </div>

                        <input type="hidden" asp-for="SharedImage.Id" />
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-page="./Index" class="btn btn-outline-primary">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

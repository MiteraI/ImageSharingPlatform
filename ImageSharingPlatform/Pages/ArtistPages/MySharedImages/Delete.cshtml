@page
@model ImageSharingPlatform.Pages.ArtistPages.MySharedImages.DeleteModel


<div class="container">
    <main role="main" class="pb-3">
        <h2>Are you sure you want to delete this?</h2>
        <hr />
        <div class="card shadow border-0 my-5 col-12">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.ImageName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=" @Html.DisplayFor(model => model.SharedImage.ImageUrl)" class="w-25" />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.ImageCategory)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageCategory.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.CreatedAt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.CreatedAt)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.IsPremium)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.IsPremium)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SharedImage.Artist)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.Artist.Username)
                    </dd>
                </dl>
                <form method="post">
                    <input type="hidden" asp-for="SharedImage.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index" class="btn btn-outline-primary">Back to List</a>
                </form>
            </div>
        </div>
        
    </main>
</div>
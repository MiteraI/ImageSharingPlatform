@page
@model ImageSharingPlatform.Pages.ArtistPages.MySharedImages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="pt-5 text-center">Create Shared Image</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="card shadow border-0 my-4 col-md-8">
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="SharedImage.ImageName" class="form-label">Image Name <span class="text-danger">*</span></label>
                            <input asp-for="SharedImage.ImageName" class="form-control" />
                            <span asp-validation-for="SharedImage.ImageName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="uploadImage" class="form-label">Upload image</label>
                            <input type="file" id="uploadImage" name="uploadImage" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SharedImage.ImageCategoryId" class="form-label"></label>
                            <select asp-for="SharedImage.ImageCategoryId" class="form-select" asp-items="ViewBag.ImageCategoryId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SharedImage.Description" class="form-label"></label>
                            <textarea asp-for="SharedImage.Description" class="form-control"></textarea>
                            <span asp-validation-for="SharedImage.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="SharedImage.IsPremium" id="IsPremium">
                            <label class="form-check-label" for="IsPremium">@Html.DisplayNameFor(model => model.SharedImage.IsPremium)</label>
                        </div>

                        <div class="d-flex justify-content-center">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-page="./Index" class="btn btn-outline-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@page
@model ImageSharingPlatform.Pages.ArtistPages.MySubscriptionPackage.EditModel

<style>
    .form-heading {
        margin-bottom: 20px;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4 class="form-heading">Subscription Package</h4>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionPackage.Price" class="control-label">Price</label>
                    <input asp-for="SubscriptionPackage.Price" class="form-control" />
                    <span asp-validation-for="SubscriptionPackage.Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionPackage.Description" class="control-label">Description</label>
                    <input asp-for="SubscriptionPackage.Description" class="form-control" />
                    <span asp-validation-for="SubscriptionPackage.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionPackage.ArtistId" class="control-label">Artist</label>
                    <select asp-for="SubscriptionPackage.ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                    <span asp-validation-for="SubscriptionPackage.ArtistId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="SubscriptionPackage.Id" />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="./Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model ImageSharingPlatform.Pages.ImageRequestMng.CreateModel
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h3 class="card-title mb-4">Create Image Request</h3>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3 has-icon">
                            <label asp-for="ImageRequests.Title" class="form-label">Title</label>
                            <input asp-for="ImageRequests.Title" class="form-control" placeholder="Enter title" />
                            <span asp-validation-for="ImageRequests.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageRequests.Description" class="form-label">Description</label>
                            <textarea asp-for="ImageRequests.Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                            <span asp-validation-for="ImageRequests.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageRequests.Price" class="form-label">Estimated Price</label>
                            <input asp-for="ImageRequests.Price" class="form-control" placeholder="Enter estimated price" />
                            <span asp-validation-for="ImageRequests.Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageRequests.ExpectedTime" class="form-label">Expected Time</label>
                            <input asp-for="ImageRequests.ExpectedTime" class="form-control" />
                            <span asp-validation-for="ImageRequests.ExpectedTime" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageRequests.ArtistId" class="form-label">Artist</label>
                            <select asp-for="ImageRequests.ArtistId" class="form-select" asp-items="ViewBag.ArtistId"></select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success mt-3 submit-btn">Create</button>
                            <a asp-page="Index" class="btn btn-outline-secondary mt-3 submit-btn">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

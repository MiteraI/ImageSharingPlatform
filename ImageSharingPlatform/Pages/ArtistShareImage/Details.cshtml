@page
@model ImageSharingPlatform.Pages.ArtistShareImage.DetailsModel

<div class="container">
    <main role="main" class="pb-3">
        <partial name="_Notification" />
        <h2 style="padding-top:25px">Details of Image</h2>
        <hr />
        <div class="card shadow border-0 my-5 col-12">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-2">
                        Image Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageName)
                    </dd>
                    <dt class="col-sm-2">
                        Image Url
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Html.DisplayFor(model => model.SharedImage.ImageUrl)" class="w-25" />
                    </dd>
                    <dt class="col-sm-2">
                        Image Category
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageCategory.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Created At
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.CreatedAt)
                    </dd>
                    <dt class="col-sm-2">
                        IsPremium
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.IsPremium)
                    </dd>
                    <dt class="col-sm-2">
                        Artist
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SharedImage.Artist.Email)
                    </dd>
                </dl>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <a asp-page="./Index" class="btn btn-outline-primary">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
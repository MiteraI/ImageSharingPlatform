@page
@model EditModel

<div class="container my-5">
    <main role="main" class="pb-3">
        <h2 class="text-center my-4">Edit Image Category</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="card shadow border-0 my-2 col-md-4">
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="ImageCategory.CategoryName" class="control-label">Category Name <span class="text-danger">*</span></label>
                            <input asp-for="ImageCategory.CategoryName" class="form-control" />
                            <span asp-validation-for="ImageCategory.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageCategory.Description" class="control-label">Description</label>
                            <input asp-for="ImageCategory.Description" class="form-control" />
                            <span asp-validation-for="ImageCategory.Description" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="ImageCategory.Id" />
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                            <a asp-page="./Index" class="btn btn-outline-primary btn-block">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

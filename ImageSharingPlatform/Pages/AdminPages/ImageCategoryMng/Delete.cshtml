@page
@model DeleteModel

<div class="container my-5">
    <main role="main" class="pb-3">
        <h2 class="text-center mt-4 mb-4"><strong>Are you sure you want to delete this?</strong></h2>
        <hr />
        <div class="row justify-content-center">
            <div class="card shadow border-0 my-2 col-md-4">
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4">
                            Category Name:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ImageCategory.CategoryName)
                        </dd>
                        <dt class="col-sm-4">
                            Description:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ImageCategory.Description)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <form method="post" class="text-center mt-3">
            <input type="hidden" asp-for="ImageCategory.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-outline-primary">Back to List</a>
        </form>
    </main>
</div>
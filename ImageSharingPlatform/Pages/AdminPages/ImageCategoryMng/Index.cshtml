@page
@model IndexModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 style="padding-top:25px">Image Category</h2>
        <hr />
        <a asp-page="Create" class="btn btn-dark">Create New Image Category</a>
            <div class="card shadow border-0 my-2 col-12">
                <div class="card-body p-4">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageCategory[0].CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageCategory[0].Description)
                                </th>                    
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ImageCategory)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td style="text-align: right;">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </main>
</div>


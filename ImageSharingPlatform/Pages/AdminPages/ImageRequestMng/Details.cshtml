@page
@model ImageSharingPlatform.Pages.AdminPages.ImageRequestMng.DetailsModel
@{
    string ImageSrc(byte[] imageBytes) => imageBytes == null ? "" : $"data:image/jpeg;base64,{Convert.ToBase64String(imageBytes)}";
}
@{

    var userJson = HttpContext.Session.GetString("LoggedInUser");
    var useraccount = JsonConvert.DeserializeObject<User>(userJson);
    var userId = useraccount.Id;
}
<div>
    <h4>Detail Information</h4>
    <hr />
    <input type="hidden" asp-for="ImageRequest.Id"/>

    <dl class="row">
        <dt class="col-sm-2">
            Status of request
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.RequestStatus)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImageRequest.ImageBlob != null)
            {
                <img src="@ImageSrc(Model.ImageRequest.ImageBlob)" alt="Request Image" width="100" height="100" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageRequest.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageRequest.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageRequest.CreateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.CreateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageRequest.ExpectedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.ExpectedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageRequest.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageRequest.Price)
        </dd>
        @{
            if (userId == Model.ImageRequest.RequesterUserId)
            {
                <dt class="col-sm-2">
                    Artist
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageRequest.Artist.FirstName) @Html.DisplayFor(model => model.ImageRequest.Artist.LastName)
                </dd>
            }
            else if (userId != Model.ImageRequest.RequesterUserId)
            {
                <dt class="col-sm-2">
                    Requester User
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageRequest.Artist.FirstName) @Html.DisplayFor(model => model.ImageRequest.Artist.LastName)
                </dd>
            }
        }
    </dl>
</div>
<div class="container mt-4">
    <main role="main">
        <h2 class="pt-3 pb-2">HISTORY REQUEST DETAILS</h2>
        <hr />
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Comment</th>
                                        <th>New Price</th>
                                        <th>Create Time</th>
                                        <th>Expected Time</th>
                                        <th>Requester</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.RequestDetail)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NewPrice)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ExpectedTime)</td>
                                            @* <td>
                                        @if (item.ImageBlob != null)
                                        {
                                        <img src="@ImageSrc(item.ImageBlob)" class="img-fluid rounded" width="100" height="100" />
                                        }
                                        </td> *@
                                            <td>@Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)</td>
                                            @*<td>
                                        @if (item.RequestStatus == RequestStatus.SUCCESS && item.ImageBlob != null)
                                        {
                                        <a href="@ImageSrc(item.ImageBlob)" download="ISP_DownloadImage" class="btn btn-success btn-sm">Download</a>
                                        }
                                        </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
@{

}
@{
    if (Model.ImageRequest.RequestStatus != RequestStatus.ACCEPTED && Model.ImageRequest.RequestStatus != RequestStatus.CANCELLED 
        && Model.ImageRequest.RequestStatus != RequestStatus.UPLOADED && Model.ImageRequest.RequestStatus != RequestStatus.SUCCESS)
    {
        if (userId == Model.ImageRequest.RequesterUserId)
        {
            <div>
                <form method="post"><button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="CanRe">Cancelled</button></form>
            </div>
        }
        else
        {
            <div>
                <form method="post"><button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="CanRe">Rejected</button></form>
            </div>
        }
        <div>
            <form method="post"><button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="CanRe">Cancelled</button></form>
        </div>
        <div>
            <form method="post"><button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="Accepted">Accepted</button></form>
        </div>
        <div>
            <a asp-page="./CreateRequestDetail" asp-route-id="@Model.ImageRequest.Id" class="btn btn-primary">Create Request Detail</a>
        </div>
    }
    else if (userId != Model.ImageRequest.RequesterUserId && Model.ImageRequest.RequestStatus == RequestStatus.ACCEPTED)
    {
        <div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageUpload">Image Upload</label>
                    <br />
                    <input asp-for="ImageUpload" type="file" id="ImageUpload" name="ImageUpload" />
                </div>
                <button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="UploadImage">Upload Image</button>
            </form>
        </div>
    }
}
@{
    if (Model.ImageRequest.RequestStatus == RequestStatus.UPLOADED)
    {
        <div>
            <form method="post">
                <button type="submit" class="btn btn-primary" asp-route-id="@Model.ImageRequest.Id" asp-page-handler="PayToDownload">Pay to Download</button>
            </form>
        </div>
    }
}
@if (Model.ImageRequest.RequestStatus == RequestStatus.SUCCESS)
{
    <a href="@ImageSrc(Model.ImageRequest.ImageBlob)" download="ISP_DownloadImage" class="btn btn-success btn-sm">Download</a>
}
<div>
    <a asp-page="./Index">Back to List</a>
</div>

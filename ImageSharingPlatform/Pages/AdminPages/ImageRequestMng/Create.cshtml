@page
@model CreateModel
<br/>
<h4>Create Image Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageRequests.Title" class="control-label"></label>
                <input asp-for="ImageRequests.Title" class="form-control" />
                <span asp-validation-for="ImageRequests.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageRequests.Description" class="control-label"></label>
                <input asp-for="ImageRequests.Description" class="form-control" />
                <span asp-validation-for="ImageRequests.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageRequests.Price" class="control-label">Estimated Price</label>
                <input asp-for="ImageRequests.Price" class="form-control" />
                <span asp-validation-for="ImageRequests.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageRequests.ExpectedTime" class="control-label">Expected Time</label>
                <input asp-for="ImageRequests.ExpectedTime" class="form-control" style="padding-top:0; padding-bottom:0;" />
                <span asp-validation-for="ImageRequests.ExpectedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageRequests.ArtistId" class="control-label">Artist</label>
                <select asp-for="ImageRequests.ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

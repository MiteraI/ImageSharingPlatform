@page
@model ImageSharingPlatform.Pages.ImageRequestMng.ReceivedImageRequestModel
@{
    string ImageSrc(byte[] imageBytes) => imageBytes == null ? "" : $"data:image/jpeg;base64,{Convert.ToBase64String(imageBytes)}";
}


<div class="container">
    <main role="main" class="pb-3">
        <partial name="_Notification" />
        <h2 style="padding-top:25px">MY RECEIVED IMAGE REQUEST</h2>
        <div class="card shadow border-0 my-2 col-12">
            <div class="card-body p-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Create Time
                            </th>
                            <th>
                                Expected Time
                            </th>
                            <th>
                                Requester
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ImageRequests)
                        {
                        <tr>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">@Html.DisplayFor(modelItem => item.Title)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpectedTime)
                            <td>
                                @Html.DisplayFor(modelItem => item.RequesterUser.FirstName) @Html.DisplayFor(modelItem => item.RequesterUser.LastName)
                            </td>
                        </tr>
                        }
                    </tbody>
                    <div>
                        <a asp-page="./Index" class="btn btn-dark">Back to My Request List</a>
                    </div>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>
@page
@model DetailsModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="pt-4 pb-2 text-center">User Details</h2>
        <hr />
        <div class="card shadow border-0 my-2">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Username)</dd>

                    <dt class="col-sm-4">First Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FirstName)</dd>

                    <dt class="col-sm-4">Last Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastName)</dd>

                    <dt class="col-sm-4">Avatar URL:</dt>
                    <dd class="col-sm-8">
                        <img src="@Html.DisplayFor(model => model.User.AvatarUrl)" alt="Avatar" class="img-fluid rounded-circle">
                    </dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                    <dt class="col-sm-4">Balance:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Balance)</dd>
                </dl>
                <div class="text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary mr-2">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </main>
</div>
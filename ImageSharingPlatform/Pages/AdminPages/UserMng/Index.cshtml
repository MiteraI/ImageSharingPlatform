@page
@model IndexModel


<div class="container">
    <main role="main" class="pb-3">
        <h2 style="padding-top:25px">User</h2>
        <hr />
        <a asp-page="Create" class="btn btn-dark">Create New User</a>
        <div class="card shadow border-0 my-2 col-12">
            <div class="card-body p-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User[0].Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User[0].AvatarUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User[0].Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User[0].Balance)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.User)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @* @Html.DisplayFor(modelItem => item.AvatarUrl) *@
                                    <img src="@item.AvatarUrl" alt="Avatar" class="img-fluid rounded">
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>
                                <td style="white-space: nowrap;">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
<style>
    .img-fluid {
        height: 100px
    }
</style>
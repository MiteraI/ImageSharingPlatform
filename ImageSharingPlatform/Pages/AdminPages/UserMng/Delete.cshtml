@page
@model DeleteModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="pt-4 pb-2 text-center text-danger"><strong>Confirm Delete</strong></h2>
        <hr />
        <div class="card shadow border-0 my-2">
            <div class="card-body p-4">
                <p class="lead text-center mb-4">Are you sure you want to delete this user?</p>
                <dl class="row">
                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Username)</dd>

                    <dt class="col-sm-4">First Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FirstName)</dd>

                    <dt class="col-sm-4">Last Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.LastName)</dd>

                    <dt class="col-sm-4">Avatar URL:</dt>
                    <dd class="col-sm-8">
                        <img src="@Html.DisplayFor(model => model.User.AvatarUrl)" alt="Avatar" class="img-fluid rounded-circle" style="max-width: 100px;">
                    </dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                    <dt class="col-sm-4">Balance:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Balance)</dd>
                </dl>
            </div>
        </div>
        <div class="text-center">
            <form method="post" class="d-inline-block">
                <input type="hidden" asp-for="User.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
            <a asp-page="./Index" class="btn btn-outline-secondary ml-2">Cancel</a>
        </div>
    </main>
</div>

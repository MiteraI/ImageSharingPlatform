@page
@model DeleteModel

<div class="container">
    <main role="main" class="pb-3">
        <partial name="_Notification" />
        <h2>Are you sure you want to delete this?</h2>
        <hr />
        <div class="card shadow border-0 my-2 col-12">
            <div class="card-body p-4">
                <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Password)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Password)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.AvatarUrl)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.AvatarUrl)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Balance)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Balance)
                </dd>
                </dl>
            </div>
        </div>
        <form method="post">
            <input type="hidden" asp-for="User.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" class="btn btn-outline-primary">Back to List</a>
        </form>
    </main>
</div>

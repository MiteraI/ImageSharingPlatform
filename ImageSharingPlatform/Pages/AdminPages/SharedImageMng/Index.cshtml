@page
@model IndexModel

<div class="container">
    <main role="main" class="pb-3">
        <partial name="_Notification" />
        <h2>Shared Image</h2>
        <hr />
        <a asp-page="Create" class="btn btn-dark">Create New Image</a>
        <div class="card shadow border-0 my-2 col-12">
            <div class="card-body p-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageCategory)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].IsPremium)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].Artist)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SharedImage)
                        {
                            <tr>
                                <td>
                                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ImageName)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageUrl)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageCategory.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsPremium)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Artist.Id)
                                </td>
                                <td style="white-space: nowrap;">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>


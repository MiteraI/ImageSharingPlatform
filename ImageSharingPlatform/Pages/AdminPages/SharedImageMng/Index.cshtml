@page
@model IndexModel

<div class="container my-5">
    <main role="main" class="pb-3">
        <h2 class="text-center mt-3 mb-4">Shared Image</h2>
        <hr />
        <div class="text-right mb-3">
            <a asp-page="Create" class="btn btn-success">Create New Image</a>
        </div>
        <div class="card shadow border-0">
            <div class="card-body p-4">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].ImageCategory)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].IsPremium)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedImage[0].Artist)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SharedImage)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageName)
                                </td>
                                <td>
                                    <img class="img-thumbnail" style="width: 60px; height: 60px;" src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImageCategory.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsPremium)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Artist.Username)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

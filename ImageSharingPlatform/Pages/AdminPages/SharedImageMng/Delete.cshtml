@page
@model DeleteModel

<div class="container">
    <main role="main" class="pb-3">
        <h2 class="text-center my-4"><strong>Are you sure you want to delete this?</strong></h2>
        <hr />
        <div class="card shadow border-0 my-5">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Image Name:
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageName)
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Image: 
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        <img src="@Html.DisplayFor(model => model.SharedImage.ImageUrl)" class="img-fluid rounded" alt="Image" />
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Image Category:
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.ImageCategory.CategoryName)
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Description
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.Description)
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Created At
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.CreatedAt)
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Premium
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.IsPremium)
                    </dd>

                    <dt class="col-sm-4 col-md-2 font-weight-bold">
                        Artist
                    </dt>
                    <dd class="col-sm-8 col-md-10">
                        @Html.DisplayFor(model => model.SharedImage.Artist.Username)
                    </dd>
                </dl>
                <form method="post" class="text-center">
                    <input type="hidden" asp-for="SharedImage.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </main>
</div>
<style>
    .img-fluid {
        max-height: 500px
    }
</style>
@page
@model EditModel


<div class="container">
    <main role="main" class="pb-3">
        <h2 class="pt-4 pb-2 text-center">Edit Shared Image</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="card shadow border-0 my-3 col-md-8">
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="SharedImage.ImageName" class="control-label">Image Name <span class="text-danger">*</span></label>
                            <input asp-for="SharedImage.ImageName" class="form-control" />
                            <span asp-validation-for="SharedImage.ImageName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SharedImage.ImageUrl" class="control-label">Image URL</label>
                            <input asp-for="SharedImage.ImageUrl" class="form-control" />
                            <span asp-validation-for="SharedImage.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SharedImage.ImageCategoryId" class="control-label">Image Category ID</label>
                            <input asp-for="SharedImage.ImageCategoryId" class="form-control" />
                            <span asp-validation-for="SharedImage.ImageCategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SharedImage.Description" class="control-label">Description</label>
                            <input asp-for="SharedImage.Description" class="form-control" />
                            <span asp-validation-for="SharedImage.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SharedImage.ArtistId" class="control-label">Artist ID</label>
                            <input asp-for="SharedImage.ArtistId" class="form-control" />
                            <span asp-validation-for="SharedImage.ArtistId" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="SharedImage.IsPremium" id="IsPremiumCheck" />
                            <label class="form-check-label" asp-for="SharedImage.IsPremium">Is Premium</label>
                        </div>

                        <input type="hidden" asp-for="SharedImage.Id" />

                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                            <a asp-page="./Index" class="btn btn-outline-primary btn-block">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

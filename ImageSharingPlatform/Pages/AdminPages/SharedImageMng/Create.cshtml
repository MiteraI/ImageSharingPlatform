@page
@model CreateModel

<div class="container">
    <main role="main" class="pb-3">
        <partial name="_Notification" />
        <h2 style="padding-top:25px">Create Shared Image</h2>
        <hr />
        <div class="col-12 d-flex justify-content-center">
            <div class="card shadow border-0 my-4 col-8">
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @* <input asp-for="SharedImage.Id" hidden> *@
                        <div class="col-12">
                            <div class="border p-3">
                                <label asp-for="SharedImage.ImageName" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.ImageName" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.ImageName" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.ImageUrl" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.ImageUrl" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.ImageUrl" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.ImageCategoryId" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <select asp-for="SharedImage.ImageCategoryId" class="form-control" asp-items="ViewBag.ImageCategoryId" style="padding-top:0; padding-bottom:0;"></select>
                                </div>

                                <label asp-for="SharedImage.Description" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.Description" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.Description" class="text-danger"></span>
                                </div>

                                <label asp-for="SharedImage.CreatedAt" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="SharedImage.CreatedAt" class="form-control" style="padding-top:0; padding-bottom:0;" />
                                    <span asp-validation-for="SharedImage.CreatedAt" class="text-danger"></span>
                                </div>

                                <div class="form-floating form-check">  
                                    <input class="form-check-input" asp-for="SharedImage.IsPremium" /> @Html.DisplayNameFor(model => model.SharedImage.IsPremium)
                                </div>

                                <label asp-for="SharedImage.ArtistId" class="control-label"></label>
                                <div class="form-floating py-2 col-12">
                                    <select asp-for="SharedImage.ArtistId" class="form-control" asp-items="ViewBag.ArtistId" style="padding-top:0; padding-bottom:0;"></select>
                                </div>
                                <div class="row pt-2">
                                    <div class="col-6 col-md-3">
                                        <button type="submit" class="btn btn-primary form-control">Create</button>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <a asp-page="./Index" class="btn btn-outline-primary border form-control">
                                            Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model ImageSharingPlatform.Pages.Profile.TransactionModel

@{
    ViewData["Title"] = "Transactions";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

        .custom-table thead tr {
            background-color: #009879;
            text-align: left;
            font-weight: bold;
            border-radius: 8px;
        }

        .custom-table th,
        .custom-table td {
            padding: 12px 15px;
        }

        .custom-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .custom-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .custom-table tbody tr:last-of-type {
                border-bottom: 2px solid #009879;
            }

            .custom-table tbody tr.active-row {
                font-weight: bold;
                color: #009879;
            }

            .custom-table tbody tr:hover {
                background-color: #f1f1f1;
                cursor: pointer;
            }
    .custom-button {
        display: inline-block;
        background: #009879;
        color: #fff;
        padding: 10px 25px;
        margin: 20px 0;
        border-radius: 5px;
        transition: background 0.3s ease;
        text-decoration: none;
        font-size: 16px;
    }

        .custom-button:hover {
            background: #00795f;
        }
</style>

<div class="container">
    <br/>
    <h2>Your Transactions</h2>
    <table class="custom-table">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr class="@GetColorClass(transaction.TransactionType)">
                    <td>@transaction.Amount</td>
                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                    <td>@transaction.TransactionType.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Page("./Index")" class="custom-button">Back to Profile</a>
</div>

@functions {
    private string GetColorClass(TransactionType type)
    {
        switch (type)
        {
            case TransactionType.INCREASE:
                return "active-row";
            case TransactionType.DECREASE:
                return "";
            default:
                return "";
        }
    }
}

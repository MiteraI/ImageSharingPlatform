@page
@model ImageSharingPlatform.Pages.Profile.MoneyModel
@{
}
<style>
    /* Optional: Custom CSS for further styling */
    .card {
        border-radius: 10px;
    }

    .input-group-text {
        background-color: #e9ecef;
    }

    .btn-primary {
        background-color: #007bff; /* Customize the button color if needed */
        border: none; /* Removes default border (optional) */
    }

    /* Enhances the shadow effect on hover */
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 20px -10px rgba(0,0,0,.25);
    }

    /* Ensures the form elements are adequately spaced and visually appealing */
    .form-control, .btn {
        height: 48px; /* Increases the height for better visibility and touch */
    }
</style>
<body>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Deposit Funds</h5>
                        <form method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Money" class="form-label">Amount</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Money" class="form-control" placeholder="Enter amount" />
                                    <span asp-validation-for="Money" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <input type="submit" value="Deposit" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
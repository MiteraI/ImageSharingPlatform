@page
@model ImageSharingPlatform.Pages.OwnedSub.CreateModel

<h4>OwnedSubscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubscriptionPackage.Id" class="control-label"></label>
                <input asp-for="SubscriptionPackage.Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Subscribe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (ViewData["PaymentSuccess"] != null)
{
	<div class="alert alert-success">
		@ViewData["PaymentSuccess"]
	</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
